      <title>MVC Application</title>
      <style>
        html {
          height: 100%;
        }
        body {
          min-height: 100%;
        }
        .flash_alert {
          color: rgb(220,20,60);
        }
        .flash_success {
          color: rgb(60,179,113);
        }
        .btn btn-outline-info my-2 my-sm-0 {
          color : white;
        }
        
 {# ------------- LOGIN  AND CONNEXION PAGES ---------------- #}
        .login_block {
          background-image: url("https://ilovehdwallpapers.com/thumbs/cute-beautiful-girl-with-photography-camera-4k-image-t2.jpg");
          background-size: cover;
          height: -webkit-fill-available;
          display : flex;
          align-items : center;
          justify-content: center;
        }
        .login_block form {
          width:50%;
          padding: 30px;
          border: 1px solid #f1f1f1;
          background: #fff;
          box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
          font-family: 'Montserrat', sans-serif;
        }
        .login_block h1 {
          text-align: center;
          color : rgb(220,20,60);
          font-family: 'Permanent Marker', cursive;         
          font-family: 'Itim', cursive;

        }
        #link{
          color : rgb(220,20,60);
        }
        .btn-outline-info {
          color: rgb(53, 122, 183);
          border-color: rgb(53, 122, 183);
        }

        .btn-secondary {
          background-color:rgb(220,20,60);
          border-color: rgb(220,20,60);
        }

        {# ------------- INDEX PAGE ------------------------------- #}
        .header{
          background-image: url("https://medias3-2.ubaldi.com/guides/24/images/banniere.jpg");
          background-size: cover;
          width: 100%;
          height: 400px;
        }
        .welcome_message {
          color: white;
          font-family: 'Permanent Marker', cursive;         
          font-family: 'Itim', cursive;
          font-size: 50px;
          text-align: left;
          height: -webkit-fill-available;
          display : flex;
          align-items : center;
          justify-content: left;
          margin-left: 50px;
        }
        .container {
          max-width: 90%;
        }
        .filters_title {
          text-align: center;
          font-size: 40px;
          font-family: 'Permanent Marker', cursive;         
          font-family: 'Itim', cursive;   
          background-color:rgb(53, 122, 183);
          color: white;
        }
        .filters_cat {
          text-align: center;
          font-family: 'Permanent Marker', cursive;         
          font-family: 'Itim', cursive;       
        }

        .filters_line {
          padding-top: 50px;
        }
        .filter_subtitle {
          color: rgb(53, 122, 183);
          font-weight: bold;
          
        }
        .filter_button {
          width: 120px;
          height: 40px;
          color: white;
          background-color:rgb(53, 122, 183);
        }
        .card {
          height: 100%;
        }

        .card-title{
          font-family: 'Permanent Marker', cursive;         
          font-family: 'Itim', cursive;
          color: rgb(53, 122, 183);
                 
        }
        .card-text {
          font-family: 'EB Garamond', serif;


        }
        .card-in-list .card-img-top {
          height: 350px;
        }
        .card .card_category {
          color: rgb(53, 122, 183);
          font-weight: bold;
          color: rgb(53, 122, 183);
          font-family: 'Permanent Marker', cursive;         
          font-family: 'Itim', cursive;
        }
        .posts_line {
          margin-bottom: 20px;
        }
        {# ------------- VIEW PAGES ------------------------------- #}
        .card_view {
          margin-top: 50px;
        }
        
        .post_view_comment_action {
          color: rgb(0, 51, 102);
        }
        .post_view_comment_text {
          font-size: 15px;
          margin-right: 10px;
          font-family: 'EB Garamond', serif;
          color : rgb(53, 122, 183);
        }

        #comment {
         margin-top: 20px;
          width: 50%;
        }
        #title_comment {
         font-family: 'EB Garamond', serif;
          color : rgb(53, 122, 183);
          padding-top:20px;
        }

        {# ------------- MANAGE ARTICLES PAGES ------------------------------- #}
      #title_manage {
        color: white;
          font-family: 'Permanent Marker', cursive;         
          font-family: 'Itim', cursive;
          font-size: 50px;
          text-align: left;
