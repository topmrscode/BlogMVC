          display : flex;
          align-items : center;
          justify-content: left;
          margin-left: 50px;
      }
      #title_manage1 {
        text-align: center;
          font-size: 30px;
          font-family: 'Permanent Marker', cursive;         
          font-family: 'Itim', cursive;   
          background-color:rgb(53, 122, 183);
          color: white;
          padding-top :20px;
          padding-bottom :20px;
      }
      #table_art{
        margin-top : 20px;
        font-family: 'Itim', cursive;  
      }
      .header_manage{
        background-image: url("https://hdwallpapersstores.com/wp-content/uploads/2018/09/Vintage-camera-bag-wallpaper-1200x480.jpg");
          background-size: cover;
          width: 100%;
          height: 400px;
          margin-top: 0;
      }
      .header_manage1{
        background-image: url("https://images.pexels.com/photos/326316/pexels-photo-326316.jpeg?cs=srgb&dl=close-up-of-vintage-camera-on-white-background-326316.jpg&fm=jpg");
          background-size: cover;
          opacity : 0.75;
          width: 100%;
          height: 200px;
          margin-top: 0;    
      }
      .form-group {
        margin-top:20px;
      }
      {# -------------admin index PAGES ------------------------------- #}
     .header_manage2{
        background-image: url("https://images.cdn1.stockunlimited.net/preview1300/web-banner-with-camera-shutter-design_1955115.jpg");
          background-size: cover;
          width: 100%;
          height: 400px;
          margin-top: 0;    
      }
      .admin_index{
        margin-top: 20px;
        font-family: 'Itim', cursive; 
        text-align: center;
        margin-bottom : 50px;  
      }
      .admin_link {
        font-family: 'Itim', cursive;  
        font-size: 18px;
      }

      .add_user {
        background-image: url("https://i.ya-webdesign.com/images/businessman-png-icon-1.png");
        width: 200px;
        height: 200px;
        background-size: cover;
        margin-right : 100px;
        margin-left : 500px;

      }

      .add_category {
        background-image: url("https://cdn.onlinewebfonts.com/svg/img_390301.png");
        width: 200px;
        height: 200px;
        background-size: cover;
      }
      {# -------------admin MANAGE PAGES ------------------------------- #}
      .table{
        margin-bottom : 50px;
        font-family: 'Itim', cursive;  
