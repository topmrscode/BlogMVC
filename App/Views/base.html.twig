         font-family: 'Itim', cursive; 
      }
      #articleForm {
         font-family: 'Itim', cursive; 
      }
      .foot {
        background-color: rgb(53, 122, 183);
        width: 100%;
        height: 200px;
        background-size: cover;
        margin-top : 40px;
        font-family: 'Itim', cursive; 
        text-align : center;
        color : white;
        font-size : 15px;
        
      }
      .text_footer{
        padding-top: 70px;
